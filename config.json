{
    "name": "correlation",
    "n_gpu": 1,

    "arch": {
        "type": "CorrelationModel",
        "args": {}
    },
    "data_loader": {
        "type": "CorrelationDataLoader",
        "args":{
            "data_dir": "data/correlation_assignment/",
            "batch_size": 64,
            "shuffle": true,
            "validation_split": 0.2,
            "num_workers": 1
        }
    },
    "optimizer": {
        "type": "Adam",
        "args":{
            "lr": 0.0005,
            "weight_decay": 0,
            "amsgrad": true
        }
    },
    "loss": "MSELoss",
    "metrics": [
        "acc",
        "mape"
    ],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 50,
            "gamma": 0.1
        }
    },
    "trainer": {
        "epochs": 10,

        "save_dir": "saved/",
        "save_period": 1,
        "verbosity": 2,

        "monitor": "min val_loss",
        "early_stop": 2,

        "tensorboard": true
    }
}
